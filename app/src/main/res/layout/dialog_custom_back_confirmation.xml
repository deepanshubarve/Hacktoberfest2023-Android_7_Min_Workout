<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    style="@style/dialogBackground"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Are you sure?"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="This will stop your workout. You've come this far,       Are you sure you want to quit? "
        android:textColor="#212121"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <!-- no use of width as we are using weight which will auto adjust width-->
        <Button
            android:id="@+id/tvYes"
            android:layout_width="@dimens/zero_dp"
            android:layout_height="@dimens/forty_eight_dp"
            android:layout_marginEnd="@dimens/ten_dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorAccent"
            android:gravity="center"
            android:text="YES"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/tvNo"
            android:layout_width="@dimens/zero_dp"
            android:layout_height="@dimens/forty_eight_dp"
            android:layout_marginStart="@dimens/ten_dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorAccent"
            android:gravity="center"
            android:text="NO"
            android:textColor="#FFFFFF"
            android:textSize="@dimens/sixteen_sp" />


    </LinearLayout>

</LinearLayout>
